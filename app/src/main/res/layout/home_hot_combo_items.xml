<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/home_hot_combo_item_img"
            android:layout_width="280dp"
            android:layout_height="190dp"
            app:riv_corner_radius="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffe"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/home_hot_combo_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_weight="2"
                    />

                <ImageView

                    android:layout_marginTop="5dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ratingbar" />

                <TextView
                    android:id="@+id/home_hot_combo_item_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="5.0" />
            </LinearLayout>

            <TextView
                android:id="@+id/home_hot_combo_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/amita"
                android:maxLines="1"

                android:text="Description"
                android:textColor="@color/black"

                />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_hot_combo_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Price: 30.000"
                        android:textAlignment="textStart"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold|italic"

                        />

                    <TextView
                        android:id="@+id/home_hot_combo_item_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Discount: 30.000 "
                        android:textAlignment="textEnd"
                        android:textColor="#BD9E3F"
                        android:textStyle="bold|italic"

                        />
                </LinearLayout>


            </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>


